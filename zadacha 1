// сумму первых n членов арифметической прогрессии.
#include <iostream>
using namespace std;
int main(){
    setlocale (NULL, "Rus");
    int n, d, a;
    cout<<"введите первый член арифметической прогрессии ";
    cin>>a;
    cout<<"введите третий член арифметической прогрессии ";
    cin>>d;
    cout<<"введите номер последнего члена ";
    cin>>n;
    cout<<"сумма членов прогрессии = "<<(2*a+d*(n-1))*n/2;
    return 0;
}
